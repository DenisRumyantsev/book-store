{
    "env": {
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
    },
    "globals": {
        "jest": "readonly",
        "test": "readonly",
        "expect": "readonly"
    }
}
