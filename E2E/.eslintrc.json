{
    "env": {
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "**/plugins/index.js",
        "**/support/index.js"
    ],
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "curly": ["error", "all"]
    },
    "globals": {
        "Cypress": "readonly",
        "describe": "readonly",
        "it": "readonly",
        "cy": "readonly",
        "expect": "readonly",
        "beforeEach": "readonly"
    }
}
